<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jmm.www.calculator">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/cal"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".easyCalculator.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".easyCalculator.ResultsActivity"
            android:label="运算结果" />
        <activity
            android:name=".easyCalculator.CapitalMoneyActivity"
            android:label="大写数字"
            android:screenOrientation="portrait" />
        <activity
            android:name=".easyCalculator.BigDecimalActivity"
            android:label="大数运算"
            android:screenOrientation="portrait" />
        <activity
            android:name=".easyCalculator.BaseConversionActivity"
            android:label="进制转换"
            android:screenOrientation="portrait" />
        <activity
            android:name=".easyCalculator.AboutActivity"
            android:screenOrientation="portrait" />
    </application>
</manifest>